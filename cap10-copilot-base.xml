<PropertyList>

  <sim include="Nasal/views-copilot.xml">

    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <sound>
      <path archive="y">Aircraft/Cap10B/Sounds/sound.xml</path>
    </sound>

    <fuel-fraction>0.75</fuel-fraction>

    <model>
      <path archive="y">Aircraft/Cap10B/Models/cap10b-copilot.xml</path>
      <click type="bool">0</click>
      <livery>
        <file type="string">default</file>
        <name type="string">Default</name>
        <shininess type="double">96</shininess>
        <texture type="string">texture.png</texture>
        <reflection-correction type="double">-0.55</reflection-correction>
      </livery>
      <config>
        <show-pilot type="bool">       1 </show-pilot>
        <show-yokes type="bool">       1 </show-yokes>
        <light-cone type="bool">       1 </light-cone>
        <show-copilot type="bool">     0 </show-copilot>
        <details-high type="bool">     0 </details-high>
        <glass-reflection type="bool"> 0 </glass-reflection>
      </config>
    </model>

    <flaps>
      <setting>0.00</setting>
      <setting>0.25</setting> 
      <setting>1.00</setting> 
    </flaps>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
	<int n="0" type="int">  0 </int>  <!-- RESERVED FOR DUAL CONTROL (Boolean Switch)-->
	<int n="9" type="int">  0 </int>  <!-- RESERVED FOR DUAL CONTROL (Boolean Light Switch)-->
        <int n="6" alias="/controls/switches/smoke">0</int> <!-- 6 smoke -->
        <int n="7">0</int>  <!-- 7 color -->

	<float n="3" alias="/controls/flight/elevator-trim"/>
	<float n="10" alias="/controls/engines/engine[0]/throttle"/>
	<float n="11" alias="/controls/engines/engine[0]/mixture"/>
	<float n="12" alias="/controls/gear/brake-left"/>
	<float n="13" alias="/controls/gear/brake-right"/>
	<float n="14" alias="/controls/flight/elevator"/>
	<float n="15" alias="/controls/flight/rudder"/>
	<float n="16" alias="/controls/flight/aileron"/>

        <string n="0" type="string"></string> <!-- RESERVED FOR DUAL CONTROL (Analog Switch - TDM)-->
 
      </generic>
    </multiplay>


    <help include="cap10b-help.xml"/>

    <menubar include="Dialogs/cap10b-copilot-menu.xml"/>

    <systems>
      <electrical>
        <path></path>
      </electrical>
    </systems>

    <!-- ############################### -->
    <!-- ######## DUAL CONTROL ######### -->
    <remote>
     <pilot-callsign type="string"></pilot-callsign>
    </remote>

  </sim>

  <controls>
    <smoke type="bool">0</smoke>
    <lighting>
     <instruments-norm type="double">1</instruments-norm>
     <panel-norm type="double">1</panel-norm>
     <landing-lights type="bool">0</landing-lights>
    </lighting>
    <gear>
      <brake-parking type="bool">1</brake-parking>
      <brake-parking-pos type="double">1.0</brake-parking-pos>
    </gear>
    <throttle-coupled type="bool">1</throttle-coupled>
    <mixture-coupled type="bool">1</mixture-coupled>
    <prop-coupled type="bool">1</prop-coupled>
    <movement-scale type="double">0.025</movement-scale>
    <engines>
      <engine n="0">
        <starter_cmd type="bool">0</starter_cmd>
      </engine>
    </engines>
    <fuel>
      <selected-tank type="int">0</selected-tank>
      <selected-tank-pos type="double">0</selected-tank-pos>
    </fuel>
  </controls>

  <engines>
    <engine>
      <oil-pressure-psi-pos type="double">0</oil-pressure-psi-pos>
      <oil-temperature-degf-pos type="double">0</oil-temperature-degf-pos>
      <rpm type="int">0</rpm>
    </engine>
  </engines>

  <consumables>
    <fuel>
      <tank n="0">
        <level-gal_us-pos type="double">0</level-gal_us-pos>
      </tank>
      <tank n="1">
        <level-gal_us-pos type="double">0</level-gal_us-pos>
      </tank>
    </fuel>
  </consumables>

  <instrumentation>
    <comm n="0">
      <power-btn type="bool">0</power-btn>
      <volume type="double">0</volume>
    </comm>
    <comm n="1">
      <power-btn type="bool">0</power-btn>
      <volume type="double">0</volume>
    </comm>
    <kt76a>
      <digit n="0" type="int">7</digit>
      <digit n="1" type="int">0</digit>
      <digit n="2" type="int">0</digit>
      <digit n="3" type="int">0</digit>
      <mode type="int">0</mode>
    </kt76a>
    <chrono>
      <power-btn type="bool">0</power-btn>
    </chrono>
  </instrumentation>

  <fdm>
    <jsbsim>
      <propulsion>
        <tank n="0">
          <priority type="int">0</priority>
        </tank>
        <tank n="1">
          <priority type="int">0</priority>
        </tank>
      </propulsion>
    </jsbsim>
  </fdm>

  <input>
    <keyboard include="Nasal/cap10b-keyboard.xml"/>
  </input>

  <nasal>
    <cap10b>
      <file>Aircraft/Cap10B/Nasal/liveries.nas</file>
      <file>Aircraft/Cap10B/Nasal/light.nas</file>
      <file>Aircraft/Cap10B/Nasal/cap10b-copilot.nas</file>
      <file>Aircraft/Cap10B/Nasal/electrical.nas</file>
      <file>Aircraft/Cap10B/Nasal/interpolate.nas</file>
    </cap10b>
  </nasal>


</PropertyList>

