<PropertyList>
  <path>LandingLightPlate.ac</path>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>LHLNDlight</object-name>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
  </effect>

  <animation>
    <type>select</type>
    <object-name>LHLNDlight</object-name>
    <condition>
      <and>
        <property>sim/multiplay/generic/int[11]</property>
        <greater-than>
          <property>sim/multiplay/generic/float[8]</property>
          <value>8</value>
        </greater-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>LHLNDlight</object-name>
    <emission>
      <red>   0.027 </red>
      <green> 0.027 </green>
      <blue>  0.027 </blue>
      <factor-prop>sim/multiplay/generic/float[5]</factor-prop>
    </emission>
  </animation>

</PropertyList>
